<mvc:View
    controllerName="orders.controller.S1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:f="sap.f">
	
				<f:DynamicPage id="idDynamicPage">
					<f:content>
					<VBox fitContainer="true">
					<Table id="idOrdersTable"
		inset="false"
		items="{
			path: '/Orders',
			sorter: {
				path: 'internalID'
			}
		}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Orders" level="H2"/>
					<ToolbarSpacer />
					<ToggleButton id="toggleInfoToolbar"
						text="Hide/Show"
						press="onToggleInfoToolbar" />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="Audit log can present here"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column>
				<Text text="Order ID" />
			</Column>
			<Column>
				<Text text="Owner" />
			</Column>
			<Column>
				<Text text="Ship to" />
			</Column>
			<Column>
				<Text text="Created by" />
			</Column>
			<Column>
				<Text text="Created at" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text
						text="{internalID}" />
					<ObjectIdentifier
						title="{companyName}"
						text="{businessPartner_ID}"/>
					<Text
						text="{shipCountry}"/>
					<Text
						text="{createdBy}"/>
					<Text
						text="{createdAt}"/>

				</cells>
			</ColumnListItem>
		</items>
	</Table>
	</VBox>
					</f:content>
				</f:DynamicPage>
</mvc:View>
